# Caddyfile for QuickAir
# Place this file at /etc/caddy/Caddyfile on your VPS

# Frontend
quickair.build8.dev {
    reverse_proxy localhost:3000
    
    encode gzip
    
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
    }
    
    # Logging
    log {
        output file /var/log/caddy/quickair-frontend.log
        format json
    }
}

# Strapi Admin & API
quickair-admin.build8.dev {
    reverse_proxy localhost:1337
    
    encode gzip
    
    # Increase upload size for media files
    request_body {
        max_size 100MB
    }
    
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
    }
    
    # Logging
    log {
        output file /var/log/caddy/quickair-strapi.log
        format json
    }
}
